<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenfangming.backend.manage.persistence.mapper.IMenuMapper">
    <resultMap id="SingleBaseResultMap" type="com.chenfangming.backend.manage.persistence.entity.MenuEntity">
        <id column="id" property="id"/>
        <result column="pid" property="pid"/>
        <result column="name" property="name"/>
        <result column="note" property="note"/>
        <result column="type" property="type"/>
        <result column="path" property="path"/>
        <result column="method" property="method"/>
        <result column="icon" property="icon"/>
        <result column="is_open" property="isOpen"/>
        <result column="sort" property="sort"/>
        <result column="is_enable" property="isEnable"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <resultMap id="BaseResultMap" type="com.chenfangming.backend.manage.persistence.entity.MenuEntity" extends="SingleBaseResultMap">
        <collection property="roleEntityList" ofType="com.chenfangming.backend.manage.persistence.entity.RoleEntity">
            <id column="role_id" property="id"/>
            <result column="role_name" property="name"/>
            <result column="role_is_enable" property="isEnable"/>
            <result column="role_create_user" property="createUser"/>
            <result column="role_create_time" property="createTime"/>
            <result column="role_update_user" property="updateUser"/>
            <result column="role_update_time" property="updateTime"/>
        </collection>
    </resultMap>

    <select id="selectAllWithRole" resultMap="BaseResultMap">
        SELECT m.id,
               m.pid,
               m.name,
               m.note,
               m.path,
               m.method,
               r.id   AS role_id,
               r.name AS role_name
        FROM backend_menu m
                 INNER JOIN backend_role_menu rm ON m.id = rm.menu_id
                 INNER JOIN backend_role r ON r.id = rm.role_id
        WHERE m.is_enable = TRUE
          AND r.is_enable = TRUE
          AND rm.is_enable = TRUE
        ORDER BY m.sort ASC
    </select>

    <select id="selectUserMenu" resultMap="SingleBaseResultMap" parameterType="java.util.List">
        SELECT m.id,
        m.pid,
        m.name,
        m.note,
        m.path,
        m.method,
        m.type,
        m.icon,
        m.sort
        FROM backend_menu m
        INNER JOIN backend_role_menu rm ON m.id = rm.menu_id
        WHERE m.is_enable = TRUE
        AND rm.is_enable=TRUE
        AND rm.role_id IN
        <foreach collection="ids" index="index" open="(" separator="," close=")" item="item">
            #{item}
        </foreach>
    </select>

</mapper>