<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenfangming.backend.manage.persistence.mapper.IUserMapper">
    <resultMap id="BaseResultMap" type="com.chenfangming.backend.manage.persistence.entity.UserEntity">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="enabled" property="enabled"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_user" property="updateUser"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <resultMap id="BaseResultMapWithRole"
               type="com.chenfangming.backend.manage.persistence.entity.view.UserRoleView"
               extends="BaseResultMap">
        <collection property="roleList" ofType="com.chenfangming.backend.manage.persistence.entity.RoleEntity">
            <id column="role_id" property="id"/>
            <result column="role_name" property="name"/>
            <result column="role_enabled" property="enabled"/>
            <result column="role_create_user" property="createUser"/>
            <result column="role_create_time" property="createTime"/>
            <result column="role_update_user" property="updateUser"/>
            <result column="role_update_time" property="updateTime"/>
        </collection>
    </resultMap>


    <!-- 根据用户名查询用户 -->
    <select id="selectByName" parameterType="string" resultMap="BaseResultMap">
        SELECT id,
               `name`,
               `password`,
               enabled
        FROM backend_user u
        where u.`name` = #{name}
    </select>

</mapper>